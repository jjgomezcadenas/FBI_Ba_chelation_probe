	note = {arXiv: 1909.02782},
	keywords = {High Energy Physics - Experiment, Physics - Chemical Physics, Physics - Instrumentation and Detectors, sabat\_general},
	file = {arXiv\:1909.02782 PDF:/Users/pabloherrero/Zotero/storage/S56YA5C7/Rivilla et al. - 2019 - Towards a background-free neutrinoless double beta.pdf:application/pdf;arXiv.org Snapshot:/Users/pabloherrero/Zotero/storage/G4KFVRPA/1909.html:text/html}
